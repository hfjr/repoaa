	<display-name>wallet-web</display-name>
	<description>融桥金服</description>

	<context-param>
		<description>初始化加载spring配置文件</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:core/application-context.xml</param-value>
	</context-param>

	<!-- 系统参数 -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j-configuration.xml</param-value>
	</context-param>
	<!-- Log4j 监听放在最前面 -->
	<listener>
		<listener-class>com.fab.core.listener.Log4jConfigurationListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- session失效时间 /分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

