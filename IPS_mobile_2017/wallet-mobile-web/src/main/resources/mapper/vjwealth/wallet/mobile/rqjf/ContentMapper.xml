<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhuanyi.vjwealth.wallet.mobile.rqjf.server.mapper.IContentMapper">


	<select id="queryList" parameterType="java.lang.String"  resultType="java.util.HashMap">
		select * from rqb_content T
		where T.is_valid='1'
		<if test="@org.apache.commons.lang.StringUtils@isNotBlank(channelIds)">
			AND T.channel_ids in (${channelIds})
		</if>
		<if test="@org.apache.commons.lang.StringUtils@isBlank(contentSequence)">
			order by T.content_sequence asc
		</if>
		LIMIT #{page},10
	</select>

</mapper>